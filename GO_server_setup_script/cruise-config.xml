<?xml version="1.0" encoding="utf-8"?>
<cruise xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="cruise-config.xsd" schemaVersion="57">
  <server artifactsdir="artifacts" serverId="ed92742b-ff6d-4c08-b213-b411644c1fc6" />
  <pipelines group="DonnorConnect">
    <pipeline name="Commit">
      <environmentvariables>
        <variable name="JAVA_HOME">
          <value>/usr/java/jdk1.7.0_09</value>
        </variable>
      </environmentvariables>
      <materials>
        <git url="https://github.com/DonorConnect/Donor-Connect.git" />
      </materials>
      <stage name="build">
        <jobs>
          <job name="build">
            <tasks>
              <exec command="./go" workingdir="Donor-Connect-App">
                <arg>clean build</arg>
              </exec>
            </tasks>
            <artifacts>
              <artifact src="Donor-Connect-App/build/libs/Donor-Connect-App.war" dest="libs" />
              <artifact src="Donor-Connect-App/build/reports/" dest="reports" />
            </artifacts>
          </job>
          <job name="zipFunctionalTest">
            <tasks>
              <exec command="zip">
                <arg>-r</arg>
                <arg>Functional-Test.zip</arg>
                <arg>Functional-Test/</arg>
              </exec>
            </tasks>
            <artifacts>
              <artifact src="Functional-Test.zip" dest="libs" />
            </artifacts>
          </job>
          <job name="zipSqlFiles">
            <tasks>
              <exec command="zip">
                <arg>-r</arg>
                <arg>SqlFiles.zip</arg>
                <arg>Donor-Connect-App/SqlFiles/</arg>
              </exec>
            </tasks>
            <artifacts>
              <artifact src="SqlFiles.zip" dest="libs" />
            </artifacts>
          </job>
        </jobs>
      </stage>
    </pipeline>
    <pipeline name="QADeploy" template="DeploymentAndTest">
      <params>
        <param name="TARGET_SERVER">10.10.4.121</param>
        <param name="TEST_TYPE">functionalTest</param>
      </params>
      <environmentvariables>
        <variable name="JAVA_HOME">
          <value>/usr/java/jdk1.7.0_09</value>
        </variable>
      </environmentvariables>
      <materials>
        <pipeline pipelineName="Commit" stageName="build" materialName="SuccessfulBuild" />
      </materials>
    </pipeline>
    <pipeline name="ShowcaseDeploy" template="DeploymentAndTest">
      <params>
        <param name="TARGET_SERVER">10.10.4.122</param>
        <param name="TEST_TYPE">smokeTest</param>
      </params>
      <environmentvariables>
        <variable name="JAVA_HOME">
          <value>/usr/java/jdk1.7.0_09</value>
        </variable>
      </environmentvariables>
      <materials>
        <pipeline pipelineName="Commit" stageName="build" materialName="SuccessfulBuild" />
      </materials>
    </pipeline>
  </pipelines>
  <templates>
    <pipeline name="DeploymentAndTest">
      <stage name="deploy">
        <approval type="manual" />
        <jobs>
          <job name="getSqlFiles">
            <tasks>
              <fetchartifact pipeline="Commit" stage="build" job="zipSqlFiles" srcfile="libs/SqlFiles.zip" dest="pkg">
                <runif status="passed" />
              </fetchartifact>
              <exec command="scp">
                <arg>pkg/SqlFiles.zip</arg>
                <arg>root@#{TARGET_SERVER}:/etc/donorsconnect/</arg>
                <runif status="passed" />
              </exec>
              <exec command="ssh">
                <arg>root@#{TARGET_SERVER}</arg>
                <arg>unzip</arg>
                <arg>-o</arg>
                <arg>/etc/donorsconnect/SqlFiles.zip</arg>
                <arg>-d</arg>
                <arg>/etc/donorsconnect/</arg>
                <runif status="passed" />
              </exec>
              <exec command="ssh">
                <arg>root@#{TARGET_SERVER}</arg>
                <arg>sh</arg>
                <arg>/etc/donorsconnect/runSqlActions.sh</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
          <job name="getBuildArtifact">
            <tasks>
              <fetchartifact pipeline="Commit" stage="build" job="build" srcfile="libs/Donor-Connect-App.war" dest="pkg">
                <runif status="passed" />
              </fetchartifact>
              <exec command="scp">
                <arg>pkg/Donor-Connect-App.war</arg>
                <arg>root@#{TARGET_SERVER}:/usr/share/apache-tomcat-7.0.32/webapps/Donor-Connect-App.war</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="checkHttpOK">
        <jobs>
          <job name="checkHttpStatus">
            <tasks>
              <exec command="ssh">
                <arg>root@#{TARGET_SERVER}</arg>
                <arg>sh</arg>
                <arg>/etc/donorsconnect/checkHttpStatus.sh</arg>
                <runif status="passed" />
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
      <stage name="test">
        <jobs>
          <job name="unzipFunctionalTest">
            <tasks>
              <fetchartifact pipeline="Commit" stage="build" job="zipFunctionalTest" srcfile="libs/Functional-Test.zip" dest="pkg">
                <runif status="passed" />
              </fetchartifact>
              <exec command="unzip">
                <arg>-o</arg>
                <arg>pkg/Functional-Test.zip</arg>
              </exec>
              <exec command="./go" workingdir="Functional-Test">
                <arg>#{TEST_TYPE}</arg>
              </exec>
            </tasks>
          </job>
        </jobs>
      </stage>
    </pipeline>
  </templates>
  <agents>
    <agent hostname="twu29vm17.thoughtworks.com" ipaddress="10.10.4.119" uuid="6c29514a-5166-46c1-b356-35c0787e5252" />
  </agents>
</cruise>

